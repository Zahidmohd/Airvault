---
import { Image } from 'astro:assets';
import Button from './Button.astro';
import Mock11 from '../../public/assets/mock11.png';
import Mock12 from '../../public/assets/mock12.png';
---

<section class="bg-white min-h-screen relative overflow-hidden py-24">
  <div class="container mx-auto px-4 text-center">
    <div class="max-w-4xl mx-auto mb-32">
      <h2 class="text-[#31323D] text-4xl md:text-5xl mb-4">
        AirVault doesn't just store your media.
      </h2>
      <h3 class="text-[#31323D] text-5xl md:text-6xl font-bold mb-6">
        We track your memories.
      </h3>
      <p class="text-[#31323D] text-xl md:text-2xl mb-10">
        Your entire life-story right at your fingertips.
      </p>
      <Button text="Try AirVault Now" href="#" />
    </div>

    <div class="relative max-w-6xl mx-auto h-[1000px] flex justify-center">
      {/* Left phone (X: 0, Y: 76.91) */}
      <div class="absolute left-[20%] top-[77px] md:top-[77px] scale-[0.9] md:scale-100 z-0">
        <Image
          src={Mock12 || "/placeholder.svg"}
          alt="AirVault App Interface - Timeline View"
          width={400}
          height={900}
          class="w-auto h-auto max-w-[300px] md:max-w-[400px] object-contain"
        />
      </div>
      
      {/* Right phone (X: 374.57, Y: 0) */}
      <div class="absolute left-[45%] top-[-20px] md:top-[-30px] z-10">
        <Image
          src={Mock11 || "/placeholder.svg"}
          alt="AirVault App Interface - Gallery View"
          width={500}
          height={1000}
          class="w-auto h-auto max-w-[350px] md:max-w-[500px] object-contain"
        />
      </div>
    </div>
  </div>
</section>
