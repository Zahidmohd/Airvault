---
import { Image } from 'astro:assets';
import Button from './Button.astro';
import Mock11 from '../../public/assets/mock11.png';
import Mock12 from '../../public/assets/mock12.png';
---

<section class="bg-white min-h-screen flex flex-col justify-center py-24 md:py-32 relative overflow-hidden">
  <div class="container mx-auto px-6 sm:px-10 md:px-16 lg:px-24 text-center">
    <div class="max-w-4xl mx-auto mb-20 md:mb-32">
      <h2 class="text-[#31323D] text-xl sm:text-2xl font-medium md:text-4xl mb-4">
        AirVault doesn't just store your media.
      </h2>
      <h3 class="text-[#31323D] text-3xl sm:text-4xl md:text-6xl font-bold mb-6 leading-tight">
        We track your memories.
      </h3>
      <p class="text-[#3D3D3D] text-lg sm:text-xl md:text-2xl font-medium mb-8 sm:mb-10">
        Your entire life-story right at your fingertips.
      </p>
      <Button text="Try AirVault Now" href="#" />
    </div>

    <!-- Images Section -->
    <div class="relative flex justify-center w-full min-h-[500px] md:min-h-[900px]">
      <!-- Desktop Layout -->
      <div class="relative hidden md:flex max-w-6xl mx-auto h-full items-center">
        <!-- Left phone (Timeline View) -->
        <div class="absolute left-[25%] lg:left-[30%] translate-x-[-100%] top-[10%] sm:top-[77px] z-0 transition-all duration-500 ease-in-out">
          <Image
            src={Mock12 || "/placeholder.svg"}
            alt="AirVault App Interface - Timeline View"
            width={400}
            height={900}
            class="w-auto h-auto max-w-[280px] md:max-w-[350px] lg:max-w-[400px] object-contain"
          />
        </div>

        <!-- Right phone (Gallery View) -->
        <div class="absolute left-[50%] translate-x-[-10%] top-[-5%] sm:top-[-30px] z-10 transition-all duration-500 ease-in-out">
          <Image
            src={Mock11 || "/placeholder.svg"}
            alt="AirVault App Interface - Gallery View"
            width={500}
            height={1000}
            class="w-auto h-auto max-w-[320px] md:max-w-[450px] lg:max-w-[500px] object-contain"
          />
        </div>
      </div>

      <!-- Mobile Layout -->
      <div class="relative flex md:hidden w-full max-w-[400px] min-h-[432px] mx-auto justify-center items-center">
        <!-- Left phone (Mobile) -->
        <div class="absolute w-[42%] sm:w-[47%] h-auto left-[10%] sm:left-10 top-[40px] z-0 transition-all duration-500 ease-in-out">
          <Image
            src={Mock12 || "/placeholder.svg"}
            alt="AirVault App Interface - Timeline View"
            width={180}
            height={360}
            class="w-full h-auto object-contain"
          />
        </div>

        <!-- Right phone (Mobile) -->
        <div class="absolute w-[48%] sm:w-[53%] h-auto left-[60%] translate-x-[-40%] top-0 z-10 transition-all duration-500 ease-in-out">
          <Image
            src={Mock11 || "/placeholder.svg"}
            alt="AirVault App Interface - Gallery View"
            width={200}
            height={400}
            class="w-full h-auto object-contain"
          />
        </div>
      </div>
    </div>
  </div>
</section>
